<% if current_user.likes.find_by(comment_id: comment.id) %>
  <%= link_to comment_unlike_path(comment), method: :delete, remote: true do %>
    <%= icon('fas', 'heart') %>
  <% end %>
<% else %>
  <%= link_to comment_like_path(comment), method: :post, remote: true do %>
    <%= icon('far', 'heart') %>
  <% end %>
<% end %>

<span><%= comment.likes.length %></span>
