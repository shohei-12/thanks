<% if current_user.likes.find_by(post_id: post.id) %>
  <%= link_to post_unlike_path(post), method: :delete, remote: true do %>
    <%= icon('fas', 'heart') %>
  <% end %>
<% else %>
  <%= link_to post_like_path(post), method: :post, remote: true do %>
    <%= icon('far', 'heart') %>
  <% end %>
<% end %>

<span><%= post.likes.length %></span>
