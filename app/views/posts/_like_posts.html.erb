<% @like_posts.each do |post| %>
  <div class="like-post">
    <div class="contents">
      <a href="/users/<%= post.user.id %>">
        <% if post.user.image? %>
          <%= image_tag post.user.image.url, alt: 'アイコン画像', width: '100', height: '100' %>
        <% else %>
          <img alt="アイコン画像" src="/assets/default.png" width="100" height="100">
        <% end %>
      </a>
      <a href="/posts/<%= post.id %>">
        <div class="info">
          <div class="category">
            <span class="category-color<%= post.category.id %>"><%= post.category.name %></span>
          </div>
          <div class="title">
            <h2><%= post.title %></h2>
          </div>
          <div class="comment-like">
            <span class="comment">
              <%= icon('fas', 'comment-dots') %>
              <%= post.comments.length %>
            </span>
            <span class="like">
              <%= icon('fas', 'heart') %>
              <%= post.likes.length %>
            </span>
          </div>
        </div>
      </a>
    </div>
  </div>
<% end %>
