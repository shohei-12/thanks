<div class="category-by">
  <div class="category-search">
    <%= render 'category_menu' %>
    <%= render 'search_form' %>
  </div>
  <div class="posts">
    <%= render 'post', posts: @posts %>
  </div>
  <%= paginate @posts %>
  <%= render 'shared/infinite_scroll1' %>
  <div class="floating">
    <a href="/posts/new">
      <i class="fas fa-pen"></i>
    </a>
  </div>
</div>

