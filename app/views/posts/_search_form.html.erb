<%= form_with(url: search_posts_path, html: { method: :get }) do |f| %>
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="input-field inline">
          <i class="material-icons prefix">search</i>
          <%= f.text_field :search %>
          <%= f.label :search, "キーワード" %>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">検索する</button>
      </div>
    </div>
  </div>
<% end %>
